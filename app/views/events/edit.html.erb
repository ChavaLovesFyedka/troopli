<div id="header">
  <div class="container">
    <div class="row">
      <div class="span12">
        <h1>Change event <%= link_to @event.name, troop_event_path(troop_id: @event.troop.id) %> for <%= link_to current_member.troop.name, current_member.troop %></h1>
        <%= simple_form_for @event, url: troop_event_path(troop_id: @event.troop.id, id: @event.id) do |f| %>
          <%= render "form", f: f %>
        <% end %>
      </div>
    </div>
  </div>
</div>
