<div id="header">
  <div class="container">
    <div class="row">
      <div class="span12">
        <h1>Event for <%= link_to @event.troop.name, troop_path(@event.troop) %></h1>
      </div>
    </div>
  </div>
</div>

<div id="content">
  <div class="container txt-lefty">
    <div class="row-fluid">
      <div class="span12">
        <h1><%= @event.name %></h1>
        <p><%= display_date @event.start_at %></p>
      </div>
    </div>
  </div>
</div>
