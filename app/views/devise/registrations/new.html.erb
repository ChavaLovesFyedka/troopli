<div id="content">
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="well well-form txt-lefty">
          <h3>Sign Up</h3>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="control-group">
              <div class="controls">
                <%= f.email_field :email, placeholder: "Email", class: "span3", autofocus: true %>
              </div>
            </div>
            
            <div class="control-group">
              <div class="controls">
                <% if @validatable %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <br />
                <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %> 
              </div>
            </div>

            <div class="control-group">
              <div class="controls">
                <%= f.password_field :password_confirmation, placeholder: "Confirm password", autocomplete: "off" %>
              </div>
            </div>

            <%= f.submit "Sign up", class: "btn btn-primary" %> 
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
